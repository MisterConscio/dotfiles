#!/usr/bin/env bash

# Get monitors connected
connected=$(xrandr -q | grep -e '\sconnected' | cut -d ' ' -f1)

# If there is only one monitor connected
[[ $(echo $connected | wc -w ) -lt 2 ]] && xrandr --output "${connected}" --auto --dpi 104 && exit

# Dual monitor setup
for display in $connected; do
  if [[ $display =~ "DP" ]]; then
    secundary=$display
  elif [[ $display =~ "HDMI" ]]; then
    primary=$display
  else
    echo "Nenhum monitor encontrado"
    exit
  fi
done

xrandr --output $secundary --auto --output $primary --mode 2560x1080 --rate 75 --primary --left-of $secundary --dpi 125 && exit
